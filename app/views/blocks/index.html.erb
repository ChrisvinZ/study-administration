<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zu erreichende Credits</th>
      <th>Veranstaltungen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.name %></td>
        <td><%= block.credits_min %></td>
        <td><%= block.events.map { |a| a.title }.join("<br>").html_safe %></td>
        <td><%= link_to 'Show', block %></td>
        <% if can? :edit, @blocks %>
          <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <% end%>
        <% if can? :destroy, @event %>
          <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

