<h1>Profile</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Vorname</th>
      <th>Studiengang</th>
      <th>E-Mail</th>
      <th>Status</th>
      <th>Geburtsdatum</th>
      <th>Über mich</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.family_name %></td>
        <td><%= profile.name %></td>

        <%if profile.user != nil%>      
          <%if profile.user.course != nil%>      
            <td><%= profile.user.course.name %></td>
          <% else %>
            <td>Kein Studiengang vorhanden</td>
          <% end %>
          <td><%= profile.user.email %></td>
          <td><%= profile.user.role.capitalize %></td>
        <%else%>
          <td>-</td>
          <td>Keine User für dieses Profil</td>
          <td>-</td>
        <% end %>
        <td><%= profile.birth_date %></td>
        <td><%= profile.bio %></td>
        <td><div class="btn-group btn-group-justified show_edit_del">
          <%= link_to 'Anzeigen', profile , class: 'btn btn-default'%>
          <%= link_to 'Bearbeiten', edit_profile_path(profile) , class: 'btn btn-default'%>
          <%= link_to 'Löschen', profile, method: :delete, data: { confirm: 'Sicher?' } , class: 'btn btn-default'%> 
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
<br>