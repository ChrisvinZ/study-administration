<p id="notice"><%= notice %></p>

<h1>Veranstaltungen</h1>

<table class = "table table-striped" style=" table-layout: fixed; width: 100%;">
  <thead>
    <tr>
      <th>Kürzel</th>
      <th>Titel</th>
      <th>Professor</th>
      <th>Credits</th>
      <th>SWS</th>
      <th>Zyklus</th>
      <th>Prüfungsart</th>
      <th>Bedingung</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.identifier %></td>
        <td><%= event.title %></td>
        <td><%= event.prof %></td>
        <td><%= event.credits %></td>
        <td><%= event.sws %></td>
        <td><%= event.cycle %></td>
        <td><%= event.exam_type %></td>
        <td><%= event.condition %></td>
        <div class="btn-group btn-group-justified">
          <td class="col-sm-1"><%= link_to 'Anzeigen', event , class: 'btn btn-default'%></td>
          <td class="col-sm-1"><%= link_to 'Bearbeiten', edit_event_path(event) , class: 'btn btn-default'%></td>
          <td class="col-sm-2"><%= link_to 'Löschen', event, method: :delete, data: { confirm: 'Sicher?' } , class: 'btn btn-default'%> </td>
        </div>
      </tr>
      <tr>
        <td colspan="11">
        <div class="overflow_to_scroll">
          <%= event.description %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Event %>
<%= link_to 'New Event', new_event_path %>
<%end%>