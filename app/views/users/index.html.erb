<!--list of all users viewable for admin-->
<% if can? :manage, @user %>
<h1>Alle Nutzer</h1>

<!-- new table design for all the users -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th style="width:40%">Status</th>
      <th style="width:20%"></th>
    </tr>

  </thead>

<!-- list email of user and options/buttons to show profil, to change passwort and to delete profile -->
  <tbody>
    <% @users.each do |user| %>
      <tr> 
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><div class="btn-group btn-group-justified btn_group_wide1">
          <%= link_to user, class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-eye-open middle_icon"></i>
          <% end %>
          <% if can? :edit, @user %>
          <%= link_to edit_user_path(user), class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-pencil middle_icon"></i>
          <% end %>
          <% end %>
          <% if can? :destroy, @user %>
          <%= link_to user, method: :delete, data: { confirm: 'Sicher?' } , class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-trash middle_icon"></i>
          <% end %>
          <% end %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- is this important ? or maybe put to the top of the page? -->
<%= link_to 'Neuer Nutzer', new_user_path, class: 'btn btn-success'%>
<% end %>

