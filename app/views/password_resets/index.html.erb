<h1>Passwort vergessen</h1> <br/>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email, 'Bitte Emailadresse eingeben' %><br/>
    <%= text_field_tag :email %> <br/><br/>
    <%= submit_tag "Neues Passwort senden", class: 'btn btn-success' %>
  </div>
<% end %>
