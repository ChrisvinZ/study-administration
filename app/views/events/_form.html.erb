<!-- layout of new event. if problems or wishes. please let design team know -->

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>
<tbody>
<tr>
<td>
  <div class="field">
    <%= f.label :identifier, 'Kürzel' %><br>
    <%= f.text_field :identifier %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= f.label :title, 'Titel' %><br>
    <%= f.text_field :title %>
  </div>
  </td>
  </tr>
  
  <tr>
  <td colspan="3">
  <div class="field text-event">
    <%= f.label :Beschreibung %><br>
    <%= f.text_area :description, class:"text-event" %>
  </div>
  </td>
  </tr>
  <tr>
  <td>
  <div class="field">
    <%= f.label :prof, 'Professor' %><br>
    <%= f.text_field :prof %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= f.label :credits, 'Credits' %><br>
    <%= f.number_field :credits %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= f.label :sws, 'SWS' %><br>
    <%= f.number_field :sws %>
  </div>
  </td>
  </tr>
  <tr>
  <td>
  <div class="field">
    <%= f.label :cycle %><br>
    <%= f.select :cycle, [ 'Jedes Wintersemester','Jedes Sommersemester','Jedes Semester', 'Jedes zweite Wintersemester', 'Jedes zweite Sommersemester', 'Nicht regelmäßig' ], :prompt => 'Bitte auswählen' %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= f.label :exam_type, 'Prüfungsart' %><br>
    <%= f.text_field :exam_type %>
  </div>
  </td>
  <tr>
  <td>
  <div class="field">
    <%= f.label :condition, 'Bedingung' %><br>
    <%= f.text_field :condition %>
  </div>
  </td>
  </tr>
  </tbody>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
