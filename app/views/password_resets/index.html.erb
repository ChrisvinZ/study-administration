<h1>Passwort vergessen</h1>

<p id="notice"><%= notice %></p>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email, 'Bitte Emailadresse eingeben' %><br/>
    <%= text_field_tag :email %> <%= submit_tag "Neues Passwort senden" %>
  </div>
<% end %>
