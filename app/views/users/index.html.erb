<!--list of all users viewable for admin-->
<% if can? :manage, @user %>
<h1>Alle Nutzer</h1>

<!-- new table design for all the users -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th style="width:40%">Status</th>
      <th style="width:20%"></th>
    </tr>
  </thead>

<!-- list email of user and options/buttons to show profil, to change passwort and to delete profile -->
  <tbody>
    <% @users.each do |user| %>
      <tr> 
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <div class="btn-group btn-group-justified btn_group_wide1">          

          <%if user.profile != nil%> 
              <%= link_to user, class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-eye-open middle_icon"></i>
              <% end %>
<!-- Button No Profile ersetzen!!!--> 
          <%else%>
            <td class="col-sm-1"><%= link_to 'No Profile',user, class: 'btn btn-default'%></td>
          <% end %>

          <% if can? :edit, @user %>
          <td class="col-sm-1"><%= link_to 'Anzeigen', profile_path(user.profile), class: 'btn btn-default' do%> <i class="glyphicon glyphicon-pencil middle_icon"></i> <%end%></td>
          <% end %>
          <% if can? :destroy, @user %>
          <%if user.id != current_user.id%>
            <td class="col-sm-2"><%= link_to 'Löschen', user, method: :delete, data: { confirm: 'Sicher?' } , class: 'btn btn-default' do %> <i class="glyphicon glyphicon-trash middle_icon"></i> <% end%></td>   
          <%end %>
          <%end %>
          
        </div> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- is this important ? or maybe put to the top of the page? -->
<%= link_to 'Neuer Nutzer', new_user_path, class: 'btn btn-success'%>
<% end %>

<!-- not authorized redirected root path-->
<% if cannot? :manage, @user %>
    <%= not_authorized("Keine Rechte um User Übersicht aufzurufen") %>
<% end %>


 
